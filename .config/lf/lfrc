# #--- Default settings ---# #
# Second column shows info
set ratios '1:3:2'
set icons on
set shell 'bash'
set scrolloff 10
set info size:time
# set color256 on

# #--- Directory shorcuts ---# #
# map gh cd ~
map gy cd ~/Downloads/youtube-dl
map gp cd ~/pdfs
map gm cd ~/mnt
map gP cd ~/Pictures
map gd cd ~/Downloads
map gc cd ~/.config/lf

# #--- Bindings ---# #
# Disable defaults
map <up>
map <down>
map <left>
map <right>
map y # copy
map d # cut
map w # shell
map yy copy
map dd cut
map S $$SHELL




# #--- cmd Bindings ---# #
# Deleting defaults
cmap <c-b> # cmd-left
cmap <c-f> # cmd-right
cmap <c-j> # cmd-enter
cmap <c-d> # cmd-delete
cmap <c-w> # cmd-delete-unix-word
cmap <c-t> # cmd-transpose
cmap <a-f> # cmd-word
cmap <a-b> # cmd-word-back
cmap <a-c> # cmd-capitalize-word
cmap <a-d> # cmd-delete-word
cmap <a-u> # cmd-uppercase-word
cmap <a-l> # cmd-lowercase-word
cmap <a-t> # cmd-transpose-word
# Rebinding
cmap <up> cmd-history-prev
cmap <down> cmd-history-next

# #--- Custom commands ---# #
cmd usage $du -h -d1 | less

# #--- Previewing Files ---# #
set previewer ~/.config/lf/pv.sh
map i $~/.config/lf/pv.sh $f | less -R
