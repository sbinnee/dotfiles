[colors]
background = #000
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/unicorn]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
radius = 0.0
fixed-center = false
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

; Underline linewidth
line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 2

; Fonts
;font-0 = fixed:pixelsize=11;1
font-0 = DejaVu Sans:style=Book:pixelsize=11;0
font-1 = JoyPixels:style=Regular:scale=10;0
font-2 = Noto Color Emoji:style=Regular:scale=10;0
font-3 = Symbols Nerd Font:scale=10;1
;font-2 = Font Awesome 5 Free:style=Solid:pixelsize=11;1

; modules-left = bspwm i3
modules-left = i3
;available modules : loadavg battery time cpu memory
modules-right = unicorn loadavg battery timefr timekr

tray-position = right
tray-padding = 2
tray-maxsize = 28
tray-detached = false

cursor-click = pointer
cursor-scroll = ns-resize

;🦄🌱🐑🐈
[module/unicorn]
type = custom/text
content = 🦄🦄🦄

[module/loadavg]
type = custom/script
exec = cat /proc/loadavg | awk '{print $1"/"$2}'
tail = true
interval = 5
format-prefix = "🔥"
format-prefix-padding = 1
; format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
; label = %percentage:2%%

[module/battery]
type = custom/script
exec = $HOME/.config/i3blocks/bin/battery
tail = true
interval = 15
;format-prefix = "🔌"
format-prefix = ""
format-prefix-font = 4
format-prefix-padding = 1
; format-prefix-foreground = ${colors.foreground-alt}
format-underline = #ffb52a

[module/time]
type = custom/script
exec = date '+(%a) %d %b %y  🕖 %H:%M'
interval = 5
tail = true
format-prefix = "📅"
format-prefix-padding = 1
format-underline = #0a6cf5

[module/timekr]
type = custom/script
exec = date '+(%a) %d %b %y  🕖 %H:%M'
interval = 5
tail = true
format-prefix = "🇰🇷"
format-prefix-font = 3
format-prefix-padding = 1
format-underline = #fff

[module/timefr]
type = custom/script
exec = TZ='Europe/Paris' date '+(%a) %d %b %y  🕖 %H:%M'
interval = 5
tail = true
format-prefix = "🇫🇷"
format-prefix-font = 3
format-prefix-padding = 1
format-underline = #0a6cf5

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2

; focused = Active workspace on focused monitor
;yellow : #d79921
;blue : #5b21d7
;violet : #b621d7
label-focused = %index%
;label-focused-foreground = #5b21d7
;label-focused-background = #d79921
;label-focused-underline = #2164d7
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
;label-separator = |

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = "🧠 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "🧠 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used%%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

