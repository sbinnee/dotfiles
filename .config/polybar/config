[module/unicorn]
type = custom/text
content = ğŸ¦„ğŸ¦„ğŸ¦„

[module/loadavg]
type = custom/script
exec = cat /proc/loadavg | awk '{print $1"/"$2}'
tail = true
interval = 5
format-prefix = "ğŸ”¥"
format-prefix-padding = 1
; format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
; label = %percentage:2%%

[module/battery]
type = custom/script
exec = $HOME/.config/i3blocks/bin/battery
tail = true
interval = 15
;format-prefix = "ğŸ”Œ"
format-prefix = "ï‡¦"
format-prefix-font = 4
format-prefix-padding = 1
; format-prefix-foreground = ${colors.foreground-alt}
format-underline = #ffb52a

[module/time]
type = custom/script
exec = date '+(%a) %d %b %y  ğŸ•– %H:%M'
interval = 5
tail = true
format-prefix = "ğŸ“…"
format-prefix-padding = 1
format-underline = #0a6cf5

[module/timekr]
type = custom/script
exec = date '+(%a) %d %b %y  ğŸ•– %H:%M'
interval = 5
tail = true
format-prefix = "ğŸ‡°ğŸ‡·"
format-prefix-font = 3
format-prefix-padding = 1
format-underline = #fff

[module/timefr]
type = custom/script
exec = TZ='Europe/Paris' date '+(%a) %d %b %y  ğŸ•– %H:%M'
interval = 5
tail = true
format-prefix = "ğŸ‡«ğŸ‡·"
format-prefix-font = 3
format-prefix-padding = 1
format-underline = #0a6cf5

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2

; focused = Active workspace on focused monitor
;yellow : #d79921
;blue : #5b21d7
;violet : #b621d7
label-focused = %index%
;label-focused-foreground = #5b21d7
;label-focused-background = #d79921
;label-focused-underline = #2164d7
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
;label-separator = |

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = "ğŸ§  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ğŸ§  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used%%

[settings]
screenchange-reload = true

[global/wm]
