[colors]
primary = #d79921
secondary = #b16286
alert = #ff0066
background = #222
background-alt = #444
background-tray = #333
background-alpha = #aa000000
foreground = #dfdfdf
foreground-alt = #555

[bar/unicorn]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 22
radius = 0.0
fixed-center = false
bottom = true
offset-y = 0

; Somehow variable makes transparent
; background-0 = #222
; background-1 = #000
background = ${colors.background-alpha}
foreground = ${colors.foreground}
;background-0 = $(colors.background-alt)
;background-1 = ${colors.background}

; Underline linewidth
line-size = 0
;overline-size = 0
;underline-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 2
module-margin-right = 1

; Fonts
;font-0 = fixed:pixelsize=11;1
font-0 = DejaVu Sans:style=Book:pixelsize=11;2
font-1 = JoyPixels:style=Regular:scale=11;2
font-2 = Noto Color Emoji:style=Regular:scale=11;1
font-3 = NanumGothic:style=Regular:pixelsize=11;2
font-4 = Noto Sans CJK JP:style=Medium,Regular:pixelsize=11;2
;; bspwm index font
font-5 = Nanum Pen Script:style=Regular:pixelsize=16;4
;font-5 = Humor Sans:stye=Regular:pixelsize=10;1
;font-5 = Nanum Brush Script:style=Regular:pixelsize=16;3
;font-3 = Symbols Nerd Font:scale=11;1

modules-left = bspwm title
modules-right = unicorn newsboat currency transmission loadavg battery week timekr timefr xkeyboard

tray-position = right
tray-padding = 2
tray-maxsize = 22
tray-detached = false
tray-background = ${colors.background-alpha}
;tray-background = #aa141414
;tray-background = #333
;tray-background = {colors.background-tray}

cursor-click = pointer
cursor-scroll = ns-resize

wm-restack = bspwm
enable-ipc = true

[module/xkeyboard]
type = internal/xkeyboard
;format-font = 6
; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock

[module/week]
type = custom/script
exec = TZ='Europe/Paris' date '+%V'
interval = 3600
format-prefix = "WEEK"
format-prefix-font = 6
format-prefix-padding = 1

[module/currency]
type = custom/script
exec = $HOME/.local/bin/currency
interval = 7200
format-prefix = "💰"
format-prefix-padding = 1
; type = custom/ipc
; format = <output>
; hook-0 = $HOME/.local/bin/currency
; format-prefix = "💰"
; format-prefix-padding = 1
; initial = 1

[module/unicorn]
;🦄🌈⛱🌱🐹🐑🐇🐰🦉🐈🐼
type = custom/text
content = "🦄🦄🦄 "

[module/traffic]
type = custom/script
exec = printf '%s / 10s' "$($HOME/.config/polybar/traffic)"
tail = true
interval = 10
format-prefix = "📻"
format-prefix-padding = 1

[module/loadavg]
type = custom/script
exec = awk '{print $1"/"$2}' /proc/loadavg
tail = true
interval = 5
format-prefix = "🔥"
format-prefix-padding = 1
;format-underline = #ab4642
;label = %percentage:2%%

[module/battery]
type = custom/script
exec = $HOME/.config/polybar/battery
tail = false
interval = 15
format-prefix = "🍙"
format-prefix-padding = 1

[module/time]
type = custom/script
exec = date '+(%a) %d %b %Y  🕖 %H:%M'
interval = 5
tail = true
format-prefix = "📅"
format-prefix-padding = 1
;format-underline = #0a6cf5

[module/timekr]
type = custom/script
exec = TZ=Asia/Seoul date '+(%a) %b %d  🕖 %H:%M'
interval = 5
tail = true
format-prefix = "KR"
format-prefix-font = 6
format-prefix-padding = 1
;format-underline = #7cafc2

[module/timefr]
type = custom/script
exec = TZ='Europe/Paris' date '+(%a) %b %d  🕖 %H:%M'
interval = 5
tail = true
format-prefix = "FR"
format-prefix-font = 6
format-prefix-padding = 1
;format-underline = #fff

[module/newsboat]
; Define the command to be executed when the hook is triggered
; Available tokens:
;   %pid% (id of the parent polybar process)
type = custom/ipc
format = <output>
hook-0 = n=$(newsboat -x print-unread | cut -d' ' -f1); [ $n -eq 0 ] && echo "💤" || echo "🗞 $n"
click-left = polybar-msg -p %pid% hook newsboat 1; notify-send -t 2000 "🗞 Newsboat updated"
; Hook to execute on launch. The index is 1-based and using
initial = 1
;
[module/transmission]
type = custom/script
exec = [ -n "$(pgrep transmission-da)" ] && echo "🌊 $(torrent)" || echo
interval = 15

[module/covid]
type = custom/script
format-prefix = "〽"
format-prefix-padding = 1
exec = $HOME/.local/bin/covid_echo fr
interval = 10800


[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
format-font = 6
enable-click = true
enable-scroll = false
;index-sort = true
;wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

;label-mode-padding = 2

;ws-icon-0 = 1;!
;ws-icon-1 = 2;@
;ws-icon-2 = 3;#
;ws-icon-3 = 4;$
;ws-icon-4 = 5;%
;ws-icon-5 = 6;^
;ws-icon-6 = 7;&
;ws-icon-7 = 8;*
;ws-icon-8 = 9;(
;ws-icon-9 = 0;)
; Available tokens:
;   %name%
;   %icon%
;   %index%
label-focused = %name%
label-focused-padding = 1
label-focused-foreground = #222
label-focused-background = ${colors.primary}
label-focused-underline= ${colors.foreground}
;yellow : #d79921
;blue : #5b21d7
;violet : #b621d7 #b16286
; label-focused-foreground = ${colors.primary}
;label-focused-background = #d79921
;label-focused-underline = #2164d7
; label-focused-background = ${colors.background-alt}
; label-focused-background = #444
; label-focused-background = #4b4b4b
; label-focused-underline= ${colors.primary}

; unfocused = Inactive workspace on any monitor
label-occupied = %name%
label-occupied-padding = 1
; empty
label-empty =

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-padding = 1
label-urgent-background = ${colors.alert}
; label-urgent-background = ${colors.secondary}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-padding = 1
label-visible-background = ${colors.secondary}
;label-visible-underline = ${self.label-focused-underline}
;label-visible-padding = ${self.label-focused-padding}

; Separator in between workspaces
;label-separator = |

[module/title]
type = internal/xwindow
; Available tags:
;   <label> (default)
format = <label>
;format-foreground = #b3b3b3
format-foreground = #aaa
format-margin = 30
;format-padding = 1
format-prefix = "🌱"
format-prefix-padding = 2
; format-underline = #ebdbb2

; Available tokens:
;   %title%
; Default: %title%
label = %title%
label-maxlen = 50

; Used instead of label when there is no window title
; Available tokens:
;   None
label-empty = Empty
label-empty-foreground = #707880
;label-empty-font = 6

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = "🧠 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "🧠 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used%%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0


