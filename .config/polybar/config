[colors]
background = #000
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/unicorn]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
radius = 0.0
fixed-center = false
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

; Underline linewidth
line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 2

; Fonts
;font-0 = fixed:pixelsize=11;1
font-0 = DejaVu Sans:style=Book:pixelsize=11;0
font-1 = JoyPixels:style=Regular:scale=10;0
font-2 = Noto Color Emoji:style=Regular:scale=10;0
font-3 = Symbols Nerd Font:scale=10;1
;font-2 = Font Awesome 5 Free:style=Solid:pixelsize=11;1

; modules-left = bspwm i3
modules-left = i3
;available modules : loadavg battery time cpu memory
modules-right = unicorn loadavg battery timefr timekr

tray-position = right
tray-padding = 2
tray-maxsize = 28
tray-detached = false

cursor-click = pointer
cursor-scroll = ns-resize

