#!/bin/bash

cb=$(xbacklight -get)

dec=0
if [ "$cb" -le 4 ]; then
	dec=1
	xbacklight -dec "$dec"
elif [ "$cb" -le 20 ]; then
	dec=2
	xbacklight -dec "$dec"
elif [ "$cb" -le 50 ]; then
	dec=5
	xbacklight -dec "$dec"
else
	dec=10
	xbacklight -dec "$dec"
fi

msg="$(( $cb - $dec ))"

notify-send -u low -t 700 "ðŸ”† $msg" &
