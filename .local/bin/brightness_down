#!/bin/sh

cb=$(xbacklight -get)

if [ "$cb" -eq 0 ]
then
    xbacklight -set 0
    exit 0
else
    if [ "$cb" -le 4 ]
    then
        dec=1
    elif [ "$cb" -le 20 ]
    then
        dec=2
    elif [ "$cb" -le 50 ]
    then
        dec=5
    else
        dec=10
    fi
fi
xbacklight -dec "$dec"

msg="$(( cb - dec ))"

dunstify -u low -t 700 -h string:x-dunst-stack-tag:brightness "ðŸ”† $msg" &
