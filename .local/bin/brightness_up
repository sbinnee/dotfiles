#!/bin/sh

cb=$(xbacklight -get)

if [ "$cb" -eq 100 ]
then
    inc=0
else
    if [ "$cb" -lt 4 ]
    then
        inc=1
    elif [ "$cb" -lt 20 ]
    then
        inc=2
    elif [ "$cb" -lt 50 ]
    then
        inc=5
    else
        inc=10
    fi
    xbacklight -inc "$inc"
fi

msg="$(( cb + inc ))"

notify-send -u low -t 700 "ðŸ”† $msg" &
