#!/bin/sh

cb=$(xbacklight -get)

inc=0
if [ "$cb" -lt 4 ]; then
	inc=1
	xbacklight -inc "$inc"
elif [ "$cb" -lt 20 ]; then
	inc=2
	xbacklight -inc "$inc"
elif [ "$cb" -lt 50 ]; then
	inc=5
	xbacklight -inc "$inc"
else
	inc=10
	xbacklight -inc "$inc"
fi

msg="$(( cb + inc ))"

notify-send -u low -t 700 "ðŸ”† $msg" &
