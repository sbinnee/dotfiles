#!/bin/sh
LANG="en_US"
COLUMNS="$(tput cols)"

if [ $# -eq 0 ]
then
    printf "No argument is given\n"
    exit 1
fi

word=""
gFlag=""
for arg in "$@"
do
    if [ "$arg" = "-g" ]
    then
        gFlag="-google"
    else
        word="$arg"
    fi
done

if [ -n "$gFlag" ]
then
    curl --silent "https://api.dictionaryapi.dev/api/v2/entries/$LANG/$word" \
        | COLUMNS=$COLUMNS parse_dict -google
else
    sdcv --non-interactive --utf8-output --color --json-output "$word" \
        | COLUMNS=$COLUMNS parse_dict
fi
