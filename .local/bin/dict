#!/bin/sh

if [ $# -eq 0 ]
then
    echo "No argument is given"
    exit 1
fi

word=""
gFlag=0
for arg in $@
do
    if [ "$arg" = "-g" ]
    then
        gFlag=1
    else
        word="$arg"
    fi
done

if [ $gFlag -eq 1 ]
then
    google_dict "$word"
else
    sdcv --non-interactive --utf8-output --color --json-output "$word" \
        | google_dict -json
fi
