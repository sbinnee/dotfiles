#!/bin/bash

dir="$HOME/Pictures/screenshots"
c=$(printf "%s\n" "Yes" "no" | dmenu -i -p "Screen capture? [Y/n]")
if [ "$c" = "Yes" ]; then
	f=$(date '+%Y%m%d-%H%M%S.png')
	# Make sure dmenu animation disappears
	sleep 0.2
	gm import -window root "$dir/$f"
	notify-send -t 7800 "Screen captured" "~${dir#$HOME}/$f"
else
	exit
fi

c=$(printf "%s\n" "Yes" "no" | dmenu -fn "Nono Sans Mono-13" -i -p "Want it in clipboard? [Y/n]")
if [ "$c" = "Yes" ]; then
	xclip -selection clipboard -target image/png "$dir/$f"
	notify-send -t 3000 "Screen captured" "~${dir#$HOME}/$f"
else
	exit
fi
