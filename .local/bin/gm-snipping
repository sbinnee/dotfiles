#!/bin/bash

dir="$HOME/Pictures/screenshots"
c=$(printf "%s\n" "Yes" "no" | dmenu -i -p "âœ‚ Screen snipping?? [Y/n]")
if [ "$c" = "Yes" ]; then
    f=$(date '+%Y%m%d-%H%M%S.png')
    gm import "$dir/$f"
    notify-send -u normal "âœ‚ Screen snipped" "~${dir#$HOME}/$f"
else
    exit
fi

c=$(printf "%s\n" "Yes" "no" \
        | dmenu -fn "Nono Sans Mono-13" -i -p "ðŸ“‹ Want it in clipboard? [Y/n]")
if [ "$c" = "Yes" ]; then
    xclip -selection clipboard -target image/png "$dir/$f"
    notify-send -u normal "âœ‚ Screen captured" "~${dir#$HOME}/$f"
else
    exit
fi
