#!/bin/sh

DEPTH=3

_project_root() {
    root=""
    i=0
    while [ "$i" -lt "$1" ]; do
        root="../$root"
        i=$((i+1))
    done
}

res="$(fd --max-depth 1 --max-results 1 \
    '(README\.md)|(pyproject\.md)|(pyproject\.toml)|(setup\.py)|(setup\.cfg)|(Makefile)' \
    '.')"
if [ -n "$res" ]
then
    rootdir="${res%/*}"
    printf "%s" "$rootdir"
    exit 0
fi

j=1
while [ "$j" -lt "$DEPTH" ]; do
    _project_root "$j"
    res="$(fd --max-depth 1 --max-results 1 \
        '(README\.md)|(pyproject\.md)|(pyproject\.toml)|(setup\.py)|(setup\.cfg)|(Makefile)' \
        "$root")"
    if [ -n "$res" ]
    then
        rootdir="${res%/*}"
        printf "%s" "$rootdir"
        exit 0
    fi
    j=$((j+1))
done
