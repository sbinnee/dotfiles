#!/bin/sh
# Toggle audio; make mute/unmute using $mod+F2
# Use pipewire

# amixer sset Master toggle
pactl set-sink-mute @DEFAULT_SINK@ toggle

perc="$(pactl list sinks | grep -oP '\d+%' | awk 'NR==1 {print $1}')"
mute="$(pactl list sinks  | grep 'Mute' | awk '{print $2}')"
if [ "$mute" = "no" ]
then
	stat="ðŸ”Š Unmuted"
else
	stat="ðŸ”‡ Muted"
fi
#notify-send -t 700 "Volume: $perc $stat"
dunstify -t 700 -h string:x-dunst-stack-tag:mute "$stat ($perc)"
