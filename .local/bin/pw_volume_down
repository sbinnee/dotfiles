#!/bin/sh
# Use pipewire
# Volume up using $mod+F2
getdelta() {
    div=$1
    rem=$(( _val % div ))
    if [ $rem -ne 0 ]
    then
        delta=$rem
        return 0
    fi
    delta=$div
    return 0
}

sink="$(pactl list short sinks | awk 'END {print $1}')"
val="$(pactl list sinks | grep -A 10 "Sink #$sink" | grep -oP '\d+%' | awk 'NR==1 {print $1}')"
_val=${val%*%}
# echo $val
# #--- amixer (ALSA) ---# #
if [ $_val -le 20 ]; then
    getdelta 2
    pactl set-sink-volume "$sink" "-$delta%"
else
    getdelta 5
    pactl set-sink-volume "$sink" "-$delta%"
fi
# #--- pulseaudio ---# #
# pactl set-sink-volume 0 +5%
val="$(pactl list sinks | grep -A 10 "Sink #$sink" | grep -oP '\d+%' | awk 'NR==1 {print $1}')"
dunstify -i null -u low -t 700 -h string:x-dunst-stack-tag:volume "ðŸ”‰ $val" &
