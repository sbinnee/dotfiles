#!/bin/bash

echo "---PULLING" && \
rclone copy -uP onedrive:/pdfs/zotero ~/pdfs/zotero && \
echo "---SLEEP 10s" && \
printf "...... "
for i in $(seq 10); do
	printf "\b%d" $i
	sleep 1
done
printf "\n"

echo "---PUSHING" && \
rclone copy -uP ~/pdfs/zotero onedrive:/pdfs/zotero && \
notify-send -t 3333 "ðŸ“š [rclone-zotero]" "Copy DONE!"
