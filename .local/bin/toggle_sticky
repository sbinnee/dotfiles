#!/bin/sh
bspc node focused.floating -g sticky
id=$(xdo id)
winfo="$(xwininfo -id $id -wm)"
wname="$(echo "$winfo" | grep -oP '".+"')"
stats="$(echo "$winfo" | grep 'Sticky')"
# notify-send "ðŸªŸ Toggle sticky"
if [ -n "$stats" ]
then
    notify-send "ðŸ“Œ sticky on" "$wname"
else
    notify-send "ðŸ“Œ sticky off" "$wname"
fi
