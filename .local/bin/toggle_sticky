#!/bin/sh
bspc node focused.floating -g sticky
id=$(xdo id)
winfo="$(xwininfo -id $id -wm)"
wname="$(echo "$winfo" | grep -oP '".+"')"
stats="$(echo "$winfo" | grep 'Sticky')"
# notify-send "ðŸªŸ Toggle sticky"
if [ -n "$stats" ]
then
    dunstify -u low -h string:x-dunst-stack-tag:sticky "ðŸ“Œ Sticky on" "$wname"
else
    dunstify -u low -h string:x-dunst-stack-tag:sticky "ðŸ“Œ Sticky off" "$wname"
fi
